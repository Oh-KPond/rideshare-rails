<h2>Passengers List</h2>

<section class="passenger-card">
  <% @passengers.each do |passenger| %>
  <section class="passenger-details">
    <p class="passenger-name">
      <%=  link_to passenger.name, passenger_path(passenger.id), class: 'name-link' %>
    </p>
    <p class="passenger-ph-num">
      Phone Number: <%= passenger.phone_num %>
    </p>
  </section>
  <% end %>
</section>
